{{!-- Post page that allows for comments --}}
<div class="row">
    <div class="col s12 m6">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title">
                    <!-- Display post name -->
                    <a href="/post/{{post.id}}">{{post.title}}</a>
                </span>
                <p>Posted by {{post.user.name}} on {{format_date post.date_created}}</p>
                <p>
                    {{post.contents}}
                </p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col s12 m6">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title">Add Comment</span>
                <div class="row">
                    <form class="col s12 new-comment-form">
                        <div class="row">
                            <div class="input-field col s12">
                                <textarea id="textarea1" class="materialize-textarea white-text comment"></textarea>
                                <label for="textarea1"></label>
                            </div>
                        </div>
                        <div>
                            <button class="waves-effect waves-light btn-small" type="submit">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


{{#if comments.length}}
{{#each comments as |comment|}}
<div class="row">
    <div class="col s12 m6">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title">{{comment.user.name}}, {{format_date comment.date_created}}</span>
                <p>{{comment.contents}}</p>
            </div>
        </div>
    </div>
</div>
{{/each}}
{{/if}}

<script src="/js/post.js"></script>