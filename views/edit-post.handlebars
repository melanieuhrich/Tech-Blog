<div class="row">
    <div class="col s12 m6">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title">Edit Post</span>
                <p>Title</p>
                <div class="row">
                    <form class="col s12 new-post-form">
                        <div class="row">
                            <div class="input-field col s12">
                                <textarea id="textarea1 title" class="materialize-textarea">{{post.title}}</textarea>
                                <label for="textarea1"></label>
                            </div>
                        </div>
                    </form>
                </div>
                <p>Content</p>
                <div class="row">
                    <form class="col s12 new-post-form">
                        <div class="row">
                            <div class="input-field col s12">
                                <textarea id="textarea1 content"
                                    class="materialize-textarea">{{post.content}}</textarea>
                                <label for="textarea1"></label>
                            </div>
                        </div>
                        <div>
                            <a class="waves-effect waves-light btn-small">Update Post</a>
                        </div>
                        <div>
                            <a class="waves-effect waves-light btn-small" data-id="{{project.id}}">Delete</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>