<div>
    <h3>Welcome, {{name}}!</h3>
</div>

{{#if posts.length}}
{{#each posts as |post|}}
 <div class="row">
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><a href="edit-post.handlebars">{{post.title}}</a></span>
          <p>{{format_date post.date_created}}</p>
        </div>
      </div>
    </div>
  </div>
{{/each}}
{{/if}}

<div>
    <a class="waves-effect waves-light btn-large" href="create-post.handlebars">Add New Post</a>
</div>

